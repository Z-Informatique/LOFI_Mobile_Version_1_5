<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LOFI.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:LOFI.Helpers"
    BackgroundColor="{DynamicResource Blue400Accent}"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Content>
        <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid Margin="0,20,0,0" Padding="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackLayout
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalOptions="FillAndExpand"
                    Orientation="Vertical">
                    <Label CharacterSpacing="0.4" FontSize="30">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontFamily="PoppinsRegular" Text="Salut, " />
                                <Span FontFamily="PoppinsSemiBold" Text="{Binding Prenom}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label
                        CharacterSpacing="0.8"
                        FontSize="12"
                        Text="Votre portefeuille numérique"
                        TextColor="{DynamicResource Gray400}" />
                </StackLayout>
                <Image
                    Grid.Row="0"
                    Grid.Column="1"
                    Aspect="AspectFit"
                    HeightRequest="60"
                    HorizontalOptions="End"
                    Source="dotnet_bot.svg"
                    WidthRequest="60">
                    <Image.Shadow>
                        <Shadow
                            Brush="{DynamicResource Black}"
                            Opacity="0.4"
                            Radius="50"
                            Offset="20,20" />
                    </Image.Shadow>
                </Image>

                <Grid
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="0,60,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackLayout Grid.Row="0" Margin="0,0,0,50">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackLayout
                                Grid.Row="0"
                                Grid.ColumnSpan="3"
                                Margin="0,0,0,20"
                                Orientation="Horizontal">
                                <Label
                                    FontFamily="PoppinsRegular"
                                    FontSize="16"
                                    HorizontalOptions="CenterAndExpand"
                                    Text="Que souhaitez-vous faire ?"
                                    TextColor="{DynamicResource Gray400}" />
                            </StackLayout>
                            <Frame
                                x:Name="FrmTransfert"
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                Padding="15"
                                BackgroundColor="{DynamicResource Green}"
                                BorderColor="Transparent"
                                HasShadow="True"
                                HeightRequest="100"
                                WidthRequest="100">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped" />
                                </Frame.GestureRecognizers>
                                <Frame.Shadow>
                                    <Shadow
                                        Brush="{DynamicResource Black}"
                                        Opacity="0.8"
                                        Radius="40"
                                        Offset="20,20" />
                                </Frame.Shadow>
                                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <Image Margin="0,10,0,0" HorizontalOptions="CenterAndExpand">
                                        <Image.Source>
                                            <FontImageSource
                                                FontFamily="materialfont"
                                                Glyph="{x:Static helpers:IconsClass.SwapHorizontal}"
                                                Size="30"
                                                Color="{DynamicResource White}" />
                                        </Image.Source>
                                    </Image>
                                    <Label
                                        FontFamily="PoppinsSemiBold"
                                        FontSize="13"
                                        HorizontalOptions="CenterAndExpand"
                                        Text="Transférer"
                                        TextColor="{DynamicResource White}"
                                        VerticalOptions="EndAndExpand" />
                                </StackLayout>
                            </Frame>
                            <Frame
                                x:Name="FrmRecharger"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                Padding="15"
                                BackgroundColor="{DynamicResource Indigo}"
                                BorderColor="Transparent"
                                HasShadow="True"
                                HeightRequest="100"
                                WidthRequest="100">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped_1" />
                                </Frame.GestureRecognizers>
                                <Frame.Shadow>
                                    <Shadow
                                        Brush="{DynamicResource Black}"
                                        Opacity="0.8"
                                        Radius="40"
                                        Offset="20,20" />
                                </Frame.Shadow>
                                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <Image Margin="0,10,0,0" HorizontalOptions="CenterAndExpand">
                                        <Image.Source>
                                            <FontImageSource
                                                FontFamily="materialfont"
                                                Glyph="{x:Static helpers:IconsClass.PlusCircleOutline}"
                                                Size="30"
                                                Color="{DynamicResource White}" />
                                        </Image.Source>
                                    </Image>
                                    <Label
                                        FontFamily="PoppinsSemiBold"
                                        FontSize="13"
                                        HorizontalOptions="CenterAndExpand"
                                        Text="Recharger"
                                        TextColor="{DynamicResource White}"
                                        VerticalOptions="EndAndExpand" />
                                </StackLayout>
                            </Frame>
                            <Frame
                                x:Name="FrmRetrait"
                                Grid.Row="1"
                                Grid.Column="2"
                                Padding="15"
                                BackgroundColor="{DynamicResource Yello}"
                                BorderColor="Transparent"
                                HasShadow="True"
                                HeightRequest="100"
                                WidthRequest="100">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped_2" />
                                </Frame.GestureRecognizers>
                                <Frame.Shadow>
                                    <Shadow
                                        Brush="{DynamicResource Black}"
                                        Opacity="0.8"
                                        Radius="40"
                                        Offset="20,20" />
                                </Frame.Shadow>
                                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <Image Margin="0,10,0,0" HorizontalOptions="CenterAndExpand">
                                        <Image.Source>
                                            <FontImageSource
                                                FontFamily="materialfont"
                                                Glyph="{x:Static helpers:IconsClass.ArrowDownThinCircleOutline}"
                                                Size="30"
                                                Color="{DynamicResource White}" />
                                        </Image.Source>
                                    </Image>
                                    <Label
                                        FontFamily="PoppinsSemiBold"
                                        FontSize="13"
                                        HorizontalOptions="CenterAndExpand"
                                        Text="Retirer"
                                        TextColor="{DynamicResource White}"
                                        VerticalOptions="EndAndExpand" />
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </StackLayout>


                    <StackLayout Grid.Row="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackLayout
                                Grid.Row="0"
                                Grid.ColumnSpan="3"
                                Margin="0,0,0,20"
                                Orientation="Horizontal">
                                <Label
                                    FontFamily="PoppinsRegular"
                                    FontSize="16"
                                    HorizontalOptions="CenterAndExpand"
                                    Text="Offrez-vous un service"
                                    TextColor="{DynamicResource Gray400}" />
                            </StackLayout>
                            <Frame
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                Padding="10"
                                BackgroundColor="{DynamicResource Black}"
                                BorderColor="Transparent"
                                HasShadow="True"
                                HeightRequest="100"
                                WidthRequest="100">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped" />
                                </Frame.GestureRecognizers>
                                <Frame.Shadow>
                                    <Shadow
                                        Brush="{DynamicResource Black}"
                                        Opacity="0.8"
                                        Radius="40"
                                        Offset="20,20" />
                                </Frame.Shadow>
                                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <Image
                                        Aspect="AspectFill"
                                        Source="logo_canal.png"
                                        VerticalOptions="CenterAndExpand"
                                        WidthRequest="80" />
                                </StackLayout>
                            </Frame>
                            <Frame
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                Padding="10"
                                BackgroundColor="{DynamicResource Black}"
                                BorderColor="Transparent"
                                HasShadow="True"
                                HeightRequest="100"
                                WidthRequest="100">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped_1" />
                                </Frame.GestureRecognizers>
                                <Frame.Shadow>
                                    <Shadow
                                        Brush="{DynamicResource Black}"
                                        Opacity="0.8"
                                        Radius="40"
                                        Offset="20,20" />
                                </Frame.Shadow>
                                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <Image
                                        Aspect="AspectFill"
                                        Source="canalbox.png"
                                        VerticalOptions="CenterAndExpand"
                                        WidthRequest="135" />
                                </StackLayout>
                            </Frame>
                            <Frame
                                Grid.Row="1"
                                Grid.Column="2"
                                Padding="10"
                                BackgroundColor="{DynamicResource White}"
                                BorderColor="Transparent"
                                HasShadow="True"
                                HeightRequest="100"
                                WidthRequest="100">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped_2" />
                                </Frame.GestureRecognizers>
                                <Frame.Shadow>
                                    <Shadow
                                        Brush="{DynamicResource Black}"
                                        Opacity="0.8"
                                        Radius="40"
                                        Offset="20,20" />
                                </Frame.Shadow>
                                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <Image
                                        Aspect="AspectFill"
                                        Source="e2c_congo.png"
                                        VerticalOptions="CenterAndExpand"
                                        WidthRequest="84" />
                                </StackLayout>
                            </Frame>
                            <Frame
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,10,10,0"
                                Padding="10"
                                BackgroundColor="{DynamicResource White}"
                                BorderColor="Transparent"
                                HasShadow="True"
                                HeightRequest="100"
                                WidthRequest="100">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped_2" />
                                </Frame.GestureRecognizers>
                                <Frame.Shadow>
                                    <Shadow
                                        Brush="{DynamicResource Black}"
                                        Opacity="0.8"
                                        Radius="40"
                                        Offset="20,20" />
                                </Frame.Shadow>
                                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <Image
                                        Aspect="AspectFill"
                                        Source="gimac.png"
                                        VerticalOptions="CenterAndExpand"
                                        WidthRequest="84" />
                                </StackLayout>
                            </Frame>
                            <Frame
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="0,10,10,0"
                                Padding="0"
                                BackgroundColor="#ffca08"
                                BorderColor="Transparent"
                                HasShadow="True"
                                HeightRequest="100"
                                WidthRequest="100">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped_2" />
                                </Frame.GestureRecognizers>
                                <Frame.Shadow>
                                    <Shadow
                                        Brush="{DynamicResource Black}"
                                        Opacity="0.8"
                                        Radius="40"
                                        Offset="20,20" />
                                </Frame.Shadow>
                                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <Image
                                        Aspect="AspectFill"
                                        Source="logo_mtn.png"
                                        VerticalOptions="CenterAndExpand"
                                        WidthRequest="80" />
                                </StackLayout>
                            </Frame>
                            <Frame
                                Grid.Row="2"
                                Grid.Column="2"
                                Margin="0,10,0,0"
                                Padding="0"
                                BackgroundColor="#ed1b24"
                                BorderColor="Transparent"
                                HasShadow="True"
                                HeightRequest="100"
                                WidthRequest="100">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped_2" />
                                </Frame.GestureRecognizers>
                                <Frame.Shadow>
                                    <Shadow
                                        Brush="{DynamicResource Black}"
                                        Opacity="0.8"
                                        Radius="40"
                                        Offset="20,20" />
                                </Frame.Shadow>
                                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <Image
                                        Aspect="AspectFill"
                                        Source="logo_airtel.png"
                                        VerticalOptions="CenterAndExpand"
                                        WidthRequest="80" />
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </StackLayout>
                </Grid>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>